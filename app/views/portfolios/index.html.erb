<p id="notice"><%= notice %></p>

<div class="profile-container">
  	<div class="avatar-container">
  		<% if @user.avatar.attached? %>
        <%= image_tag @user.avatar.variant(resize: "100x100!"), class: "rounded-circle avatar-img"%>
      <% else %>
        <img class="rounded-circle avatar-img"
        src="https://assets.currencycloud.com/wp-content/uploads/2018/01/profile-placeholder.gif" 
        width="100" height="100" class="rounded-circle">
      <% end %>
    </div>  

    <div class="profile-info">
        <div class="username">
        	<%= @user.user_name %>
        </div>
        <div class="email">
          <%= @user.email_address %>         
        </div>
        <div class="bio">
          <p id="bio_text"><%= @user.biography %></p> 
        </div>
    </div>
</div>

<hr>

<main>
	<% @user_portfolios.each do |portfolio|%>
	  <% portfolio.files.each do |file| %>
		  <figure>
				<div class="portfolio">
			    <a class="portfolio-image" href=<%="/portfolios/#{portfolio.id}"%>>
			        <div class="overlay">
			            <div class="info">
			            	<div class="name"><%= portfolio.user.user_name %></div>
			              <div class="title"><%= portfolio.description %></div>         
			            </div>
			        </div>
			        <%= image_tag(file, style: 'width:300px; height:300px') %>
			    </a>
			  </div>		  	
		  </figure>
		<% end %>
	<% end %>
</main>

<div class="container">
	<div class="row">
		<% @user_portfolios.each do |portfolio|%>
		  <% portfolio.files.each do |file| %>
			  <div class="col">
					<div class="portfolio">
				    <a class="portfolio-image" href=<%="/portfolios/#{portfolio.id}"%>>
				        <div class="overlay">
				            <div class="info">
				            	<div class="name"><%= portfolio.user.user_name %></div>
				              <div class="title"><%= portfolio.description %></div>         
				            </div>
				        </div>
				        <%= image_tag(file, style: 'width:300px; height:300px') %>
				    </a>
				  </div>		  	
			  </div>
			<% end %>
		<% end %>
	</div>
</div>

<br>

