<div id="portfolio-box">
<div class="row">
  <div class="col-sm-8 d-flex flex-column">
    <div class="row">
      <div class="col-sm-4">
        <h3 class="text-left" id="portfolio_title">
          Portfolio <%= portfolio.id %></h3>
      </div>

      <div class="col-sm-8 d-flex justify-content-end">
        <button type="button" class="btn btn-secondary mr-1" id="edit_button">
            edit 
        </button>
        <button type="button" class="btn btn-secondary" id="delete_button">
            delete 
        </button>
      </div>
    </div>
    
    <div id=<%="myCarousel#{portfolio.id}"%>
         class="carousel slide w-100">
      <div class="carousel-inner w-100" role="listbox">
          <div class="carousel-item row no-gutters active">
              <div class="col d-flex justify-content-center">
                <%= image_tag(portfolio.files[0], style: 'width:350px; height:280px', class: "img-fluid") %>
              </div>
          </div>
          <% portfolio.files[1..-1].each do |file| %>
              <div class="carousel-item row no-gutters">
                <div class="col d-flex justify-content-center">
                  <%= image_tag(file, style: 'width:350px; height:280px', 
                                class: "img-fluid") %>
                </div>
              </div>
          <% end %>
      </div>
      <a class="carousel-control-prev" href=<%="#myCarousel#{portfolio.id}"%> 
        role="button" data-slide="prev">
        <span><svg width="27" height="48" viewBox="0 0 27 48" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><path d="M3 21L24 0l3 3L6 24l21 21-3 3L0 24l3-3z" fill-rule="evenodd"></path></svg></span>
      </a>
      <a class="carousel-control-next" href=<%="#myCarousel#{portfolio.id}"%>
       role="button" data-slide="next">
        <span><svg width="27" height="48" viewBox="0 0 27 48" version="1.1" xmlns="http://www.w3.org/2000/svg"><path d="M24 27L3 48l-3-3 21-21L0 3l3-3 24 24-3 3z" fill-rule="evenodd"></path></svg></span>
      </a>
    </div>
    
    
  </div>
  <div class="col-sm-4">  
    <div class="row">
      <div class="col-sm-12"> 
        <h3>Tags</h3>
        <% portfolio.tags.each do |tag| %>
          <h5 style="float: left; margin-right: 10px;"><span class="badge badge-secondary"><%= tag.tag_name%></span></h5>
        <% end %>
      </div> 
    </div>
    
    <div class="row mt-3">
      <div class="col-sm-12"> 
        <h3>Description</h3>
        <p><%= portfolio.description%></p>
      </div>
    </div>
    
  </div>  
</div>
</div>