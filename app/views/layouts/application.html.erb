<!DOCTYPE html>
<html>
  <head>
    <title>Commission Marketplace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <ul class="navbar-nav w-100 text-nowrap">
            <li class="nav-item"><%= link_to 'Comm. Market', root_path, class: 'nav-link btn-block' %></li>
            <% if logged_in? %>
              <li class="nav-item"><%= link_to 'Profile', user_path(current_user.user_name), class: 'nav-link btn-block' %></li>
              <li class="nav-item"><%= link_to 'Dashboard', dashboard_path, class: 'nav-link btn-block' %></li>
              <li class="nav-item"><%= link_to 'Logout', logout_path, method: :delete, class: 'nav-link btn-block' %></li>
            <% else %>
              <li class="nav-item"><%= link_to 'Login', login_path, class: 'nav-link btn-block' %></li>
              <li class="nav-item"><%= link_to 'Register', register_path, class: 'nav-link btn-block' %></li>
            <% end %>
          </ul>
        </div>
        </nav>
    </header>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <%= content_tag :div, message, class: "alert alert-#{message_type}" %>
      <% end %>
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
    <script src="https://unpkg.com/@popperjs/core@2"></script>
  </body>
</html>
