<p id="notice"><%= notice %></p>

<h1>Has Tags</h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @has_tags.each do |has_tag| %>
      <tr>
        <td><%= has_tag.tag_id %></td>
        <td><%= has_tag.artist_id %></td>
        <td><%= link_to 'Show', has_tag %></td>
        <td><%= link_to 'Edit', edit_has_tag_path(has_tag) %></td>
        <td><%= link_to 'Destroy', has_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Has Tag', new_has_tag_path %>
